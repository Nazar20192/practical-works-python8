class Hero:
    def __init__(self, name, health=100, mana=50, gold=100):
        self.name = name
        self.health = health
        self.mana = mana
        self.gold = gold
        self.inventory = []

    def cast_spell(self, spell_name, mana_cost):
        """Використовує закляття, витрачаючи ману. Перевіряє, чи достатньо мани."""
        if self.mana >= mana_cost:
            self.mana -= mana_cost
            damage = mana_cost * 2
            print(f"{self.name} використав {spell_name}, завдав {damage} шкоди!")
            return damage
        else:
            print(f"Помилка: Недостатньо мани для {spell_name}!")
            return 0

    def remove_from_inventory(self, item):
        """Видаляє предмет з інвентарю. Обробляє ValueError, якщо предмета немає."""
        try:
            self.inventory.remove(item)
            print(f"Видалено '{item}' з інвентарю")
        except ValueError:
            print(f"Помилка: Предмет '{item}' не знайдено в інвентарі")

    def get_item_at_index(self, index):
        """Повертає предмет за індексом. Обробляє IndexError."""
        try:
            return self.inventory[index]
        except IndexError:
            print(f"Помилка: Неправильний індекс {index}")
            return None

    def divide_gold(self, num_players):
        """Ділить золото між гравцями. Обробляє ZeroDivisionError."""
        try:
            share = self.gold / num_players
            print(f"Кожен гравець отримає {share} золота")
            return share
        except ZeroDivisionError:
            print("Помилка: Неможливо поділити золото на нуль гравців")
            return 0

    def status(self):
        print(f"Герой: {self.name} | HP: {self.health} | Мана: {self.mana} | Золото: {self.gold}")
        print(f"Інвентар: {self.inventory}")

# ============================================================
# ТЕСТИ - тепер програма не падатиме
# ============================================================
def run_tests():
    hero = Hero("Артур")
    hero.inventory = ["меч", "щит", "зілля"]
    hero.status()
    
    print("\n[Тест 1] Закляття з недостатньою маною")
    hero.cast_spell("Вогняна куля", 30)  # OK
    hero.cast_spell("Блискавка", 50)      # ТЕПЕР ОБРОБЛЕНО
    print(f"Мана після тесту: {hero.mana}")
    
    print("\n[Тест 2] Видалення неіснуючого предмета")
    hero.remove_from_inventory("сокира")  # ТЕПЕР ОБРОБЛЕНО
    
    print("\n[Тест 3] Доступ за неіснуючим індексом")
    item = hero.get_item_at_index(99)     # ТЕПЕР ОБРОБЛЕНО
    print(f"Знайдено: {item}")
    
    print("\n[Тест 4] Ділення на нуль")
    hero.divide_gold(0)                   # ТЕПЕР ОБРОБЛЕНО
    
    print("\n" + "=" * 40)
    print("✅ ВСІ ТЕСТИ ПРОЙДЕНО!")
    hero.status()

if __name__ == "__main__":
    run_tests()
